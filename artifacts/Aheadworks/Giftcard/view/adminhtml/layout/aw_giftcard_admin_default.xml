<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Aheadworks_Giftcard::css/style.css"/>
    </head>
    <body>
        <referenceContainer name="page.main.actions">
            <block class="Aheadworks\Giftcard\Block\Adminhtml\Page\Menu" name="aw_giftcard_menu" />
        </referenceContainer>
        <referenceContainer name="page.content">
            <container name="aw_giftcard_breadcrumbs" before="messages.wrapper" as="aw_giftcard_breadcrumbs" htmlTag="div" htmlClass="aw_gc-breadcrumbs">
                <block class="Aheadworks\Giftcard\Block\Adminhtml\Page\Breadcrumbs" name="breadcrumbs" as="breadcrumbs"/>
            </container>
        </referenceContainer>
    </body>
</page>
