<?xml version="1.0" encoding="UTF-8" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog">
            <group id="nameproduct_request" showInDefault="1" showInStore="1" showInWebsite="1">
                <label>Name Product Requests</label>
                <field id="simples" translate="label comment" type="multiselect" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1">
                    <label>Simple Products</label>
                    <comment>The simple products you wish to automatically attach to any requested name product</comment>
                    <source_model>MemorialBracelets\NameProductRequest\Model\Config\Source\Simples</source_model>
                </field>
                <field id="email_from" translate="label comment" type="text" sortOrder="20" showInWebsite="1" showInStore="1" showInDefault="1">
                    <label>Email from</label>
                    <comment>Email address admin notification emails should be sent from</comment>
                </field>
                <field id="email_to" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInStore="1" showInWebsite="1">
                    <label>Email to</label>
                    <comment>Email address admin notification emails should be sent to</comment>
                </field>
                <field id="email_cc" translate="label comment" type="text" sortOrder="40" showInWebsite="1" showInStore="1" showInDefault="1">
                    <label>Email CC</label>
                    <comment>Comma separated email addresses that should receive copies of admin email notifications</comment>
                </field>
            </group>
        </section>
    </system>
</config>
